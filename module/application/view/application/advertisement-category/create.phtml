	Cancel
</button>
<?php echo $this->form()->closeTag()?>

<script type="text/javascript">
	$(document).ready(function(){
		$("#cancel").click(function(){
			window.top.location = '<?php echo $this->url('advertisement-category', array('action' => 'list'))?>'
		});
	});
